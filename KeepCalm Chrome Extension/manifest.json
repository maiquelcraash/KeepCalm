{
  "manifest_version": 2,
  "name": "Gatinho Instantâneo",
  "description": "Esta extensão exibe um lindo gatinho!",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Clique aqui para ver um lindo gatinho!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/lib/lodash.js",
        "js/watcher.js"
      ]
    }
  ]
}