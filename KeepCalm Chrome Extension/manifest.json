{
  "manifest_version": 2,
  "name": "KeepCalm Beta 0.10",
  "description": "Detecção de Agressividade",
  "version": "0.10",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "KeepCalm",
    "default_icon": "img/icon19x19.png"
  },
  "icons": {
    "16": "img/favicon.png",
    "48": "img/icon48x48.png",
    "128": "img/icon128x128.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "declarativeContent",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/watcher.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  }
}