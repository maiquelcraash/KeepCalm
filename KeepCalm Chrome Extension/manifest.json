{
  "manifest_version": 2,
  "name": "KeepCalm",
  "description": "Detecção de Agressividade",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Clique aqui para ver um lindo gatinho!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "declarativeContent",
    "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/watcher.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  }
}